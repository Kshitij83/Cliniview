# Environment variables for the backend server
PORT=3001
MONGODB_URI=mongodb://localhost:27017/cliniview
JWT_SECRET=your_jwt_secret_should_be_complex_and_unique
JWT_EXPIRES_IN=7d

# Google OAuth 2.0 credentials
# Get these from the Google Cloud Console
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3001/api/auth/google/callback

# File storage configuration
FILE_UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10000000 # 10MB in bytes

# Application URLs
FRONTEND_URL=http://localhost:3000

# ML Service Integration
ML_SERVICE_URL=http://localhost:5000
ML_API_KEY=your_secure_api_key_here
BACKEND_URL=http://localhost:3001